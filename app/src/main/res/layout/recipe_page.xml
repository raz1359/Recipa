<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="23dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        app:srcCompat="@drawable/arrow"/>
    

    <ImageView
        android:id="@+id/favorite_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/ivBack"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/favorites_icon" />

    <TextView
        android:id="@+id/tvRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/favorite_icon"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:text="Name"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:fontFamily="@font/urbanist_medium"
        android:textColor="#272727"
        ></TextView>

    <ImageView
        android:layout_width="330dp"
        android:layout_height="300dp"
        android:background="@color/gray"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tvRecipeName"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/ibHeart"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/heart_not_clicked"
        android:clickable="true"
        android:background="@null"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="340dp"
        android:elevation="2dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="description"
        android:paddingLeft="60dp"
        android:textAllCaps="true"
        android:paddingVertical="3dp"
        android:layout_below="@id/ibHeart"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="25dp"
        android:textColor="#494949"
        android:background="@drawable/circle"
        android:textSize="20dp"
        android:layout_marginStart="-25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:text="asdasdasdas asda asd"
        android:paddingHorizontal="13dp"
        android:gravity="right"
        />




</RelativeLayout>