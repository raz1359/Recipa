<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">

    <EditText
        android:id="@+id/search_bar2"
        android:layout_width="700dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        android:imeOptions="actionNext"
        android:background="@drawable/edit_text_search"

        android:paddingLeft="55dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:ems="10"
        android:inputType="textFilter"
        android:fontFamily="@font/urbanist_medium"
        android:hint="What are you looking for?"


        android:textColor="@color/black"
        android:textColorHint="#A3A3A3"
        android:textSize="15dp"></EditText>

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="23dp"
        android:layout_height="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/arrow_gray"/>

    <ImageView
        android:id="@+id/searchIcon2"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="82dp"
        android:onClick="updateSearch"
        android:clickable="true"
        app:srcCompat="@drawable/search_icon2"></ImageView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclViewSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar2"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:overScrollMode="never"
        android:scrollbars="horizontal">
    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:isScrollContainer="false"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled"
        android:background="@drawable/nav_background">
    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>